{
  "name": "Epimarks",
  "version": "0.91",
  "description": "Easily update bookmarks of episode-like websites.",
  "homepage_url": "https://yilinjuang.com",
  "permissions": [
    "activeTab",
    "bookmarks",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "background": {
      "scripts": [
          "src/background.js"
      ],
      "persistent": true
  },
  "browser_action": {
    "default_title": "Epimarks",
    "default_icon": {
        "16": "icons/unbookmark16.png",
        "24": "icons/unbookmark24.png",
        "32": "icons/unbookmark32.png",
        "64": "icons/unbookmark64.png"
    }
  },
  "icons": {
      "16": "icons/bookmark16.png",
      "24": "icons/bookmark24.png",
      "32": "icons/bookmark32.png",
      "64": "icons/bookmark64.png",
      "128": "icons/bookmark128.png",
      "256": "icons/bookmark256.png",
      "512": "icons/bookmark512.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
